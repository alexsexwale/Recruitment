<link rel="stylesheet" type="text/css" href="/public/invoice.css">
<div id="invoice" class="invoice-box">
  <table cellpadding="0" cellspacing="0">
    <tr class="top">
      <td colspan="2">
        <table>
          <tr>
            <td class="title">
              <img
                src="/public/img/logo.png"
                style="width:100%; max-width:300px;"
              />
            </td>
            <td>
              <div class="label-wrap">Invoice #:</div><div class="label-wrap"><%= invoice.invoiceNo %></div> <br />
              <div class="label-wrap">  Created:</div><div class="label-wrap"><%= invoice.created %></div> <br />
              <div class="label-wrap">      Due:</div><div class="label-wrap"><%= invoice.created %></div>
            </td>
          </tr>
        </table>
      </td>
    </tr>
    <tr class="information">
      <td colspan="2">
        <table>
          <tr>
            <td>
                Jobox<br />
                <%= invoice.joboxAddressLine1 %><br />
                <%= invoice.joboxAddressLine2 %><br />
                <%= invoice.joboxCity %><br />
                <%= invoice.joboxProvince %><br />
                <%= invoice.joboxCountry %><br />
                <%= invoice.joboxPostalCode %><br />
                <%= invoice.joboxContactNumber %>
            </td>
            <td>
              <%= invoice.companyName %><br />
              <%= invoice.addressLine1 %><br />
              <%= invoice.city %><br />
              <%= invoice.province_state %><br />
              <%= invoice.country %><br />
              <%= invoice.postalCode_zipCode %>
            </td>
          </tr>
        </table>
      </td>
    </tr>
    <tr class="heading">
      <td>
        Description
      </td>
      <td>
        Amount
      </td>
    </tr>
    <tr class="item">
      <td>
        <%= invoice.description %>
      </td>
      <td>
        <%= invoice.budget %>
      </td>
    </tr>
    <tr class="item">
      <td>
        Jobox Service Fee
      </td>
      <td>
        <%= invoice.serviceFee %>
      </td>
    </tr>
    <tr class="item last">
      <td>
        Jobox Admin Cost
      </td>
      <td>
        <%= invoice.adminCost %>
      </td>
    </tr>
    <tr class="total">
      <td></td>
      <td>Total: R <%= invoice.total %></td>
    </tr>
  </table>
</div>
